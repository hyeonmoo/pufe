<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.putupiron.healthmate">
	<!-- 매칭 등록 -->
	<insert id="post" parameterType="HealthMate">
		insert into healthmate_matching values(,#{poster},#{part},#{date},#{time},1,null)
	</insert>
	<!-- 매칭 요청 -->
	<update id="join" parameterType="HealthMate">
		update healthmate_matching set status=2, partner=#{partner} where no=#{no}
	</update>
	<!-- 요청 응답 -->
	<update id="answer" parameterType="HealthMate">
		update healthmate_matching set status=#{status} where no=#{no}
	</update>
	<!-- 목록 -->
	<select id="list" resultType="HealthMate">
		select * from healthmate_matching
	</select>
</mapper>